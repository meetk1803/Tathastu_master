<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_15sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:outlineSpotShadowColor="@color/black"
    app:cardElevation="@dimen/_4sdp"
    app:cardMaxElevation="@dimen/_4sdp"
    app:cardPreventCornerOverlap="false">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_Event_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/dash_banner_2"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/eventimage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:elevation="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:outlineSpotShadowColor="@color/white"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:srcCompat="@drawable/donate_food"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_eventname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="start"
                android:maxLines="2"
                android:lineHeight="@dimen/_13sdp"
                android:text="SURACHANA EDUCATION AND CHARITABLE TRUST"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                app:autoSizeMaxTextSize="@dimen/_12sdp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform"
                tools:ignore="TextSizeCheck,TextContrastCheck" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    app:tint="@color/white"
                    android:layout_gravity="center"
                    android:src="@drawable/round_people_24"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_eparticipated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_regular"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_regular"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_etotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_regular"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text=" Participated"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="TextSizeCheck" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_eventdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:fontFamily="@font/kanit_medium"
                    android:gravity="end|center"
                    android:maxLines="1"
                    android:text="12/12/2024"
                    android:drawableTint="@color/white"
                    android:drawableStart="@drawable/round_calendar_month_24"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16sdp"
                    app:autoSizeMaxTextSize="@dimen/_16sdp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_eventlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:fontFamily="@font/inter_semibold"
                android:gravity="start|center"
                android:maxLines="2"
                android:drawableStart="@drawable/round_location_on_24"
                android:drawableTint="@color/white"
                android:text="Surachana Education And Charitable Trust, B-2, City Light Apartment, Parle Point, Surat 395 007, Gujarat, India"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                app:autoSizeMaxTextSize="@dimen/_13sdp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeTextType="uniform"
                tools:ignore="TextSizeCheck,TextContrastCheck" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
