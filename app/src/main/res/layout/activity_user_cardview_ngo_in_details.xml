<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_BG"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".User_Package.user_NGO_list.item_NGO_Detail">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BTN_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:backgroundTint="@color/status_color"
        android:src="@drawable/round_arrow_back_24"
        app:fabCustomSize="@dimen/_30sdp"
        app:fabSize="mini"
        app:tint="@color/white"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_NGO_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="PRATIBIMB FOUNDATION-HELPING HAND FOR CHILD EDUCATION
"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="@dimen/_15sdp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:ignore="TextSizeCheck,TextContrastCheck" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_ngo_in_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_8sdp"
            app:cardPreventCornerOverlap="false">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">


