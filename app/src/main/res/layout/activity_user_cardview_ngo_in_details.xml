                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_NGO_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/twitter"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
                    android:textColorLink="@color/Link"
                    android:maxLines="2"
                    android:autoLink="web"
                    android:text="https://twitter.com/globalvisionngo"
                    android:textColor="@color/status_color"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="@dimen/_13sdp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    app:drawableTint="@color/status_color"
                    tools:ignore="TextSizeCheck,TextContrastCheck,TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_NGO_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:drawableStart="@drawable/youtube"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
