                    android:id="@+id/txt_NGO_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/round_location_on_24"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start"
                    android:maxLines="3"
                    android:text="NGO PRATIBIMB FOUNDATION-HELPING HAND FOR CHILD EDUCATION ADDRESS"
                    android:textColor="@color/status_color"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="@dimen/_12sdp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeTextType="uniform"
                    app:drawableTint="@color/status_color"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_NGO_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:drawableStart="@drawable/round_category_24"
