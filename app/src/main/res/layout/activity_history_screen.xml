<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_BG"
    android:orientation="vertical"
    tools:context=".User_Package.user_History.History_Screen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="History"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            tools:ignore="HardcodedText,TextSizeCheck,TouchTargetSizeCheck" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/BTN_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="start"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:backgroundTint="@color/status_color"
                android:src="@drawable/round_arrow_back_24"
                app:fabCustomSize="@dimen/_30sdp"
                app:fabSize="mini"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    app:shapeAppearanceOverlay="@style/TopRoundedCorner" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_20sdp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:cardMaxElevation="@dimen/_8sdp"
                        app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:fontFamily="@font/inter_medium"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="Cash Donation : "
                            android:textColor="@color/gray_font"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="TextSizeCheck" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/outline_add_box_24"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableTint="@color/status_color"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="end"
                            android:paddingRight="@dimen/_10sdp"
                            android:text="DONATE"
                            android:textColor="@color/status_color"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            app:fontFamily="@font/kanit_regular"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>
                    </androidx.cardview.widget.CardView>



                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:text="Donation History :"
                        android:textColor="@color/status_color"
                        android:textSize="@dimen/_15sdp"
                        tools:ignore="TextSizeCheck" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/status_color" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="@dimen/_5sdp"
                                app:cardMaxElevation="@dimen/_8sdp"
                                app:cardPreventCornerOverlap="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt_history_transaction"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/round_keyboard_arrow_down_24"
                                    android:drawableTint="@color/status_color"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="Transaction History : "
                                    android:textStyle="bold"
                                    android:textColor="@color/status_color"
                                    android:textSize="@dimen/_13sdp"
                                    tools:ignore="TextSizeCheck" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_history_transaction_Usermodel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clipToPadding="false"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:visibility="gone" />


                            </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="@dimen/_5sdp"
                                app:cardMaxElevation="@dimen/_8sdp"
                                app:cardPreventCornerOverlap="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt_history_food"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:drawableEnd="@drawable/round_keyboard_arrow_down_24"
                                    android:drawableTint="@color/status_color"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="Food Donation History : "
                                    android:textStyle="bold"
                                    android:textColor="@color/status_color"
                                    android:textSize="@dimen/_13sdp"
                                    tools:ignore="TextSizeCheck" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_history_food_Usermodel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clipToPadding="false"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:visibility="gone" />


                            </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:backgroundTint="@color/white"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_40sdp"
                                app:cardMaxElevation="@dimen/_8sdp"
                                app:cardPreventCornerOverlap="false">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/txt_history_blood"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:drawableEnd="@drawable/round_keyboard_arrow_down_24"
                                    android:drawableTint="@color/status_color"
                                    android:fontFamily="@font/inter_medium"
                                    android:text="Blood Donation History : "
                                    android:textStyle="bold"
                                    android:textColor="@color/status_color"
                                    android:textSize="@dimen/_13sdp"
                                    tools:ignore="TextSizeCheck" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycle_history_Blood_Usermodel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clipToPadding="false"
                                    android:paddingBottom="@dimen/_20sdp"
                                    android:visibility="gone" />


                            </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>