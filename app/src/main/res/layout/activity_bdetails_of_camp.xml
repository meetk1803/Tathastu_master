<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".User_Package.blood_section.B_Details_of_Camp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/BTN_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:backgroundTint="@color/blood_donation"
                android:src="@drawable/round_arrow_back_24"
                app:fabCustomSize="@dimen/_30sdp"
                app:fabSize="mini"
                app:tint="@color/white"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Camp Details"
            android:textColor="@color/blood_donation"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:fontFamily="@font/kanit_medium"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_21sdp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            app:cardElevation="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardMaxElevation="@dimen/_8sdp"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boarder"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/b_camp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:maxLines="2"
                    android:text="Smt P.J Koshiya Charitable Trust"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_sdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/b_date"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:text="21-03-2024"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:text="To"
                    android:textColor="@color/blood_donation"
                    android:textSize="@dimen/_15sdp"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_edate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/b_date"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:text="23-03-2024"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/round_location_on_24"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:maxLines="3"
                    android:text="Westfall Lawnns, Maxwell Street, Adajan, Surat "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/b_note"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:maxLines="7"
                    android:text="We have Organize Blood camp, on Makarsankranti festival So all peple are come and donate blood. Timing : 10 AM ~ 6 PM"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/display_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:drawableStart="@drawable/b_phone"
                    android:textColorLink="@color/blood_donation"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/inter_semibold"
                    android:gravity="start|center"
                    android:text="+919876509123"
                    android:autoLink="phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    app:drawableTint="@color/blood_donation"
                    tools:ignore="TextSizeCheck,TextContrastCheck" />

                <Button
                    android:id="@+id/BTN_call"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="match_parent"
                    android:text="Call"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blood_donation"
                    android:fontFamily="@font/kanit_medium"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_10sdp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="@string/blood_donation_one"
            android:textColor="@color/blood_donation"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:text="@string/blood_donation_two"
            android:textColor="@color/blood_donation"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Even if you passed the donor selection, you must inform them about all your other physical and health conditions."
            android:textColor="@color/blood_donation"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>


</ScrollView>