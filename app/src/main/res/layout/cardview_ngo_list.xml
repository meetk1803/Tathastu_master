<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_15sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp"
    app:cardMaxElevation="@dimen/_8sdp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_NGO_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start"
            android:drawableStart="@drawable/baseline_contact_emergency_24"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableTint="@color/status_color"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:maxLines="2"
            android:text="Substance Abuse and Mental Health Administration (SAMHSA) NGO"
            android:textColor="@color/status_color"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            app:autoSizeMaxTextSize="@dimen/_15sdp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:ignore="TextSizeCheck,TextContrastCheck" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_NGO_mno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoLink="phone"
            android:textColorLink="@color/Link"
            app:drawableTint="@color/gray_font"
            android:drawableStart="@drawable/round_phone_24"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start"
            android:maxLines="2"
            android:text="1-800-662-4357"
            android:textColor="@color/gray_font"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            app:autoSizeMaxTextSize="@dimen/_13sdp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:ignore="TextSizeCheck,TextContrastCheck" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_NGO_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/round_category_24"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="start"
            android:maxLines="2"
            android:drawablePadding="@dimen/_10sdp"
            app:drawableTint="@color/gray_font"
            android:text="Depression or Mental health"
            android:textColor="@color/gray_font"
            android:textStyle="bold"
            android:textSize="@dimen/_13sdp"
            app:autoSizeMaxTextSize="@dimen/_13sdp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            tools:ignore="TextSizeCheck,TextContrastCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_NGO_seeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/see_details"
            android:textColor="@color/status_color"
            android:textSize="@dimen/_10sdp"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
