<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:background="@color/white"
        android:layout_margin="@dimen/_12sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_25sdp">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:id="@+id/image"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/quote_color"
                android:backgroundTint="@color/white"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/banner_allquote_bg_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:gravity="center"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/round_format_quote_24_start"
                    android:drawableTint="@color/first"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableEnd="@drawable/round_format_quote_24_end"
                    android:text="Optimism, a guiding star in the night sky of challenges, fuels the belief in a brighter jomorrowjjj."
                    android:textSize="@dimen/_28sdp"
                    android:maxLines="5"
                    android:gravity="center"
                    android:padding="@dimen/_7sdp"
                    app:autoSizeTextType="uniform"
                    android:lineHeight="@dimen/_35sdp"
                    android:autoSizeMaxTextSize="@dimen/_28sdp"
                    android:autoSizeMinTextSize="@dimen/_26sdp"
                    android:fontFamily="@font/salsa_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:autoSizeTextType="uniform"/>



            </LinearLayout>



    </androidx.cardview.widget.CardView>
</LinearLayout>