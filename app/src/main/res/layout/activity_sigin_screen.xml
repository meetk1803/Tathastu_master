<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toolbar_BG"
    android:orientation="vertical"
    tools:context=".Sigin_Screen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="@dimen/_30sdp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:ignore="SpeakableTextPresentCheck">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_110sdp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        app:shapeAppearanceOverlay="@style/TopRoundedCorner" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="@dimen/_270sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:fontFamily="@font/kanit_medium"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="Registered Yourself"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20sdp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="@dimen/_270sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/inter_regular"
                            android:gravity="center"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="Enter your details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="TextSizeCheck" />

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:hint="Enter Name"
                            app:boxStrokeColor="@color/toolbar_BG"
                            app:boxStrokeErrorColor="@color/err_color"
                            app:cursorColor="@color/black"
                            app:cursorErrorColor="@color/err_color"
                            app:hintTextColor="@color/toolbar_BG"
                            app:prefixTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_Siginname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textAutoComplete"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:hint="Enter Email"
                            app:boxStrokeColor="@color/toolbar_BG"
                            app:boxStrokeErrorColor="@color/err_color"
                            app:cursorColor="@color/black"
                            app:cursorErrorColor="@color/err_color"
                            app:hintTextColor="@color/toolbar_BG"
                            app:prefixTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_Siginemail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:hint="Enter Mobile No."
                            app:boxStrokeColor="@color/toolbar_BG"
                            app:boxStrokeErrorColor="@color/err_color"
                            app:cursorColor="@color/black"
                            app:prefixText="+91"
                            app:cursorErrorColor="@color/err_color"
                            app:hintTextColor="@color/toolbar_BG"
                            app:prefixTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_Siginmobileno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:maxLength="10"
                                android:inputType="phone"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:hint="Enter Bithdate"
                            app:helperText="*click to open date picker or (e.g. dd/mm/yyyy)"
                            app:helperTextTextColor="@color/black"
                            app:boxStrokeColor="@color/toolbar_BG"
                            app:boxStrokeErrorColor="@color/err_color"
                            app:cursorColor="@color/black"
                            app:cursorErrorColor="@color/err_color"
                            app:hintTextColor="@color/toolbar_BG"
                            app:prefixTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_Sigindob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:inputType="text|date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/chk_signintc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit_regular"
                                android:gravity="center"
                                android:text="I accept the "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                app:buttonTint="@color/status_color"
                                tools:ignore="HardcodedText,TextSizeCheck" />

                            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                                android:id="@+id/BTN_signin_TC"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/_1sdp"
                                android:text="Terms &amp; Conditions"
                                android:textColor="@color/toolbar_BG"
                                android:textSize="@dimen/_12sdp"
                                app:shapeAppearanceOverlay="@style/RoundedSquare"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TextSizeCheck" />

                        </LinearLayout>
                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/BTN_signin"
                            android:layout_width="@dimen/_240sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:backgroundTint="@color/toolbar_BG"
                            android:gravity="center"
                            android:text="Sign In"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_17sdp"
                            app:shapeAppearanceOverlay="@style/RoundedSquare"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <View
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/toolbar_BG" />
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit_regular"
                                android:text=" OR "
                                android:textColor="@color/toolbar_BG" />

                            <View
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/toolbar_BG" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/BTN_signin_google"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:backgroundTint="@color/white"
                                android:src="@drawable/ic_google"
                                app:elevation="@dimen/_3sdp"
                                app:fabCustomSize="@dimen/_40sdp"
                                app:tint="@null"
                                app:tintMode="src_atop"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/BTN_signin_fb"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_facebook"
                                app:backgroundTint="@color/white"
                                app:elevation="@dimen/_3sdp"
                                app:fabCustomSize="@dimen/_40sdp"
                                app:tint="@null"
                                app:tintMode="src_atop"
                                tools:ignore="SpeakableTextPresentCheck" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal">
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/inter_regular"
                                android:gravity="center"
                                android:lineSpacingExtra="@dimen/_5sdp"
                                android:text="Already Registered ?  "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="TextSizeCheck" />

                            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                                android:id="@+id/BTN_signin_login"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/_1sdp"
                                android:text="Login"
                                android:textColor="@color/toolbar_BG"
                                android:textSize="@dimen/_10sdp"
                                app:shapeAppearanceOverlay="@style/RoundedSquare"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TextSizeCheck" />
                        </LinearLayout>



                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>